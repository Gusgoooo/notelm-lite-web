# Database (required for app and worker)
# Supabase example:
# DATABASE_URL=postgresql://postgres.<project-ref>:<password>@aws-0-<region>.pooler.supabase.com:6543/postgres?sslmode=require
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/notebookgo

# Auth
NEXTAUTH_SECRET=replace-with-32-byte-random-string
NEXTAUTH_URL=http://localhost:3000

# Provider routing
CHAT_PROVIDER=openrouter
EMBEDDING_PROVIDER=openrouter

# OpenRouter
OPENROUTER_API_KEY=sk-or-v1-your-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_CHAT_MODEL=perplexity/sonar-pro
OPENROUTER_SEARCH_MODEL=perplexity/sonar-pro
OPENROUTER_EMBEDDING_MODEL=baai/bge-m3
EMBEDDING_DIMENSIONS=1536
CHAT_MODEL=gpt-4o-mini

# Storage
STORAGE_TYPE=filesystem
UPLOADS_DIR=./uploads
# S3_* only used when STORAGE_TYPE=s3
# S3_BUCKET=notebookgo-uploads
# S3_REGION=your-region-id
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=https://s3.oss-your-region-id.aliyuncs.com
# S3_FORCE_PATH_STYLE=false

# Worker tuning
WORKER_CONCURRENCY=2
WORKER_POLL_INTERVAL_MS=1200
EMBEDDING_BATCH_SIZE=32
