{
  "name": "notebookgo",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:worker": "pnpm --filter worker dev",
    "db:generate": "pnpm --filter db generate",
    "db:migrate": "pnpm --filter db migrate",
    "build": "pnpm -r run build",
    "build:worker": "pnpm --filter db build && pnpm --filter shared build && pnpm --filter worker build",
    "vercel:env:sync": "node scripts/sync-vercel-env.mjs",
    "vercel:deploy": "pnpm -s dlx vercel --prod --yes"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.14.2"
}
