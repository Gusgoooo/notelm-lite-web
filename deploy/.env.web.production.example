# External database for Vercel runtime
DATABASE_URL=postgresql://<user>:<password>@<host>:5432/<db>?sslmode=require

# NextAuth (must match your public domain)
NEXTAUTH_SECRET=replace-with-32-byte-random-string
NEXTAUTH_URL=https://notebookgo.vercel.app

# Model providers
CHAT_PROVIDER=openrouter
EMBEDDING_PROVIDER=openrouter
OPENROUTER_API_KEY=sk-or-v1-your-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_CHAT_MODEL=deepseek/deepseek-chat-v3-0324
OPENROUTER_EMBEDDING_MODEL=baai/bge-m3
EMBEDDING_DIMENSIONS=1536
CHAT_MODEL=gpt-4o-mini

# Use object storage in production (do not use filesystem on Vercel)
STORAGE_TYPE=s3
S3_BUCKET=your-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
# Optional for MinIO/R2:
# S3_ENDPOINT=https://<endpoint>

# Optional tuning
WORKER_CONCURRENCY=2
WORKER_POLL_INTERVAL_MS=1200
EMBEDDING_BATCH_SIZE=32
